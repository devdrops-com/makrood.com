<!DOCTYPE html>
<mt:Include module="config">
<html lang="<mt:BlogLanguage>" itemscope itemtype="http://schema.org/WebPage">
<head>
<meta charset="<mt:PublishCharset>">
<title><mt:BlogName encode_html="1"></title>
<meta name="description" content="<mt:BlogDescription remove_html="1" encede_html="1">">
<meta name="keywords" content="<mt:CustomFieldValue identifier="blog_keyword">">
<meta name="viewport" content="width=device-width,initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link rel="shortcut icon" href="<mt:BlogURL encode_html="1">images/favicon.ico">
<link rel="apple-touch-icon" href="<mt:WebsiteURL>images/apple-touch-icon.png">
<link rel="start" href="<mt:BlogURL encode_html="1">">
<mt:CanonicalLink>
<!-- Open Graph Protocol -->
<meta property="og:type" content="website">
<meta property="og:locale" content="<mt:BlogLanguage setvar="blog_lang"><mt:If name="blog_lang" eq="ja">ja_JP<mt:Else><mt:Var name="blog_lang"></mt:If>">
<meta property="og:title" content="<mt:BlogName encode_html="1">">
<meta property="og:url" content="<mt:BlogURL encode_html="1">">
<meta property="og:description" content="<mt:BlogDescription remove_html="1" encede_html="1">">
<meta property="og:site_name" content="<mt:BlogName encode_html="1">">
<meta property="og:image" content="<mt:BlogURL encode_html="1">images/ogimage.png">
<!-- Microdata -->
<meta itemprop="description" content="<mt:BlogDescription remove_html="1" encede_html="1">">
<link itemprop="url" href="<mt:BlogURL encode_html="1">">
<link itemprop="image" href="<mt:BlogURL encode_html="1">images/ogimage.png">
<mt:Include module="common_stylesheet">
<mt:Include module="common_head_js">
</head>
<body id="sitetop">
  <!--[if lt IE 10]>
    <p class="browserupgrade">You are using an <strong>outdated</strong>browser. Please <a href="http://browsehappy.com/">upgrade your browser</a>to improve your experience.</p>
  <![endif]-->
  <mt:Include module="header">
  <div class="mainvisual top">
    <div class="mainvisual-eyecatch">
      <div class="mainvisual-eyecatch-symbol"><img src="<mt:WebsiteURL>images/mainvisual-eyecatch-symbol.png" alt="Herbal Shop Makrood"></div>
      <div id="mainvisual-eyecatch-slider">
        <mt:Assets field:toppage_eyecatch="1" lastn="3">
          <div class="mainvisual-eyecatch-slider-image" style="background-image: url('<mt:AssetURL>')"></div>
        </mt:Assets>
      </div>
    </div>
  </div>
  <mt:Pages sort_order="ascend" no_folder="1">
    <mt:SetVarBlock name="iposition"><mt:CustomFieldValue identifier="image_position"></mt:SetVarBlock>
    <section  id="<mt:PageBasename>" class="webpages<mt:If name="__even__"> pageeven</mt:If>" <mt:If name="iposition" eq="背景全体に配置"><mt:If tag="CustomFieldValue" identifier="page_main_image"> style="position: relative; background: url('<mt:CustomFieldAsset identifier="page_main_image"><mt:AssetURL></mt:CustomFieldAsset>')  no-repeat scroll center 30% / cover ;"</mt:If></mt:If>>
      <mt:If name="iposition" eq="上に配置">
        <mt:If tag="CustomFieldValue" identifier="page_main_image">
          <div class="page_main_image top" style="background-image: url('<mt:CustomFieldAsset identifier="page_main_image"><mt:AssetURL></mt:CustomFieldAsset>');"></div>
        </mt:If>
      </mt:If>
      <div class="container<mt:If name="iposition" eq="上に配置"> image-top</mt:If>">
        <h2 class="webpages-title"><mt:PageTitle encode_html="1"></h2>
        <p class="webpages-subtitle"><mt:CustomFieldValue identifier="page_english_title"></p>
        <mt:PageBody>
        <mt:PageMore>
      </div>
      <mt:If name="iposition" eq="下に配置">
        <mt:If tag="CustomFieldValue" identifier="page_main_image">
          <div class="page_main_image bottom" style="background-image: url('<mt:CustomFieldAsset identifier="page_main_image"><mt:AssetURL></mt:CustomFieldAsset>');"></div>
        </mt:If>
      </mt:If>
    </section>
  </mt:Pages>
  <mt:SetVarBlock name="entrycount"><mt:BlogEntryCount include_blogs="column"></mt:SetVarBlock>
  <mt:If name="entrycount" gt="0">
    <section id="top-column" class="webpages">
      <div class="container">
        <h2 class="webpages-title">コラム 〜小さな畑から〜</h2>
        <p class="webpages-subtitle">Column</p>
        <div class="row">
          <mt:Entries include_blogs="column" lastn="4">
            <div class="col-sm-3">
              <a href="<mt:EntryPermalink>">
                <mt:If tag="CustomFieldValue" identifier="entry_main_image">
                   <figure><img src="<mt:CustomFieldAsset identifier="entry_main_image"><mt:AssetThumbnailURL width="320"></mt:CustomFieldAsset>" alt="<mt:EntryTitle>"></figure>
                <mt:Else>
                  <mt:EntryAssets type="image" sort_order="ascend" limit="1">
                    <figure><img src="<mt:AssetThumbnailURL width="320" square="1">" width="320" height="320" alt="<mt:EntryTitle>"></figure>
                  <mt:Else>
                    <figure class="noimage"><img src="<mt:WebsiteURL>images/no-image.png" width="320" height="320" alt="NO IMAGE"></figure>
                  </mt:EntryAssets>
                </mt:If>
                <div class="entry-detail">
                  <h3 class="top-column-title"><mt:EntryTitle encode_html="1"></h3>
                  <p class="entry-excerpt"><mt:EntryExcerpt></p>
                </div>
              </a>
            </div>
          </mt:Entries>
        </div>
      </div>
    </section>
  </mt:If>
  <mt:If name="entrycount" gt="0">
    <section id="top-news" class="webpages">
      <div class="container">
        <h2 class="webpages-title">お知らせ</h2>
        <p class="webpages-subtitle">News</p>
        <ul class="top-news-list">
          <mt:Entries lastn="4">
            <li><a href="<mt:EntryPermalink>"><time class="top-news-list-time"><mt:EntryDate></time><mt:EntryTitle encode_html="1"></a></li>
          </mt:Entries>
        </ul>
        <div class="webpages-more"><a class="btn btn-info btn-lg" href="#" role="button">お知らせ一覧へ</a></div>
      </div>
    </section>
  </mt:If>
  <mt:Include module="footer">
  <mt:Include module="common_bottom_js">
</body>
</html>
